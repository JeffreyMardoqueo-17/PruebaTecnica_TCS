@model PruebaTecnicaJeffreyDesarrollo.Models.EstadoCliente

@{
    ViewData["Title"] = "Eliminar Estado de Cliente";
}

<h1>¿Estás seguro de que deseas eliminar este estado?</h1>

<div>
    <h3>@Model.Nombre</h3>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
</form>
