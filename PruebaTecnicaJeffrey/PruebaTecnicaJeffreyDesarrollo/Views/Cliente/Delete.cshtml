@model PruebaTecnicaJeffreyDesarrollo.Models.Cliente

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<div class="container mt-4">
    <h1 class="mb-4">Eliminar Cliente</h1>

    <div class="alert alert-danger">
        <h4>¿Estás seguro de que deseas eliminar este cliente?</h4>
        <p>Nombre: @Model.Nombre</p>
        <p>Apellido: @Model.Apellido</p>
        <p>Correo: @Model.Correo</p>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
