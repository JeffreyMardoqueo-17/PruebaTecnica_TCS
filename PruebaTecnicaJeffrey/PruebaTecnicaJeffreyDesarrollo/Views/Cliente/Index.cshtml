@model IEnumerable<PruebaTecnicaJeffreyDesarrollo.Models.Cliente>

@{
    ViewData["Title"] = "Lista de Clientes";
}

<div class="container mt-4">
    <h1 class="mb-4">Lista de Clientes</h1>
    <p>
        <a href="@Url.Action("Create")" class="btn btn-primary">Crear Nuevo Cliente</a>
    </p>

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Correo</th>
                <th>Teléfono</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model)
            {
                <tr>
                    <td>@cliente.Id</td>
                    <td>@cliente.Nombre</td>
                    <td>@cliente.Apellido</td>
                    <td>@cliente.Correo</td>
                    <td>@cliente.Telefono</td>
                    <td>
                        @if (cliente.IdEstadoCliente == 1)
                        {
                            <span class="estado-activo">Activo</span>
                        }
                        else if (cliente.IdEstadoCliente == 2)
                        {
                            <span class="estado-inactivo">Inactivo</span>
                        }
                        else if (cliente.IdEstadoCliente == 3)
                        {
                            <span class="estado-bloqueado">Bloqueado</span>
                        }
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = cliente.Id })" class="btn btn-warning btn-sm">Editar</a>
                        <a href="@Url.Action("Details", new { id = cliente.Id })" class="btn btn-info btn-sm">Detalles</a>
                        <a href="@Url.Action("Delete", new { id = cliente.Id })" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
