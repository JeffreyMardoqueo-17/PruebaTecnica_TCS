@model PruebaTecnicaJeffreyDesarrollo.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="container mt-4">
    <h1 class="mb-4">Editar Cliente</h1>

    <form asp-action="Edit" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="form-group">
            <label for="Nombre">Nombre</label>
            <input type="text" class="form-control" id="Nombre" name="Nombre" value="@Model.Nombre" required />
        </div>

        <div class="form-group">
            <label for="Apellido">Apellido</label>
            <input type="text" class="form-control" id="Apellido" name="Apellido" value="@Model.Apellido" required />
        </div>

        <div class="form-group">
            <label for="Telefono">Teléfono</label>
            <input type="text" class="form-control" id="Telefono" name="Telefono" value="@Model.Telefono" required />
        </div>

        <div class="form-group">
            <label for="Correo">Correo</label>
            <input type="email" class="form-control" id="Correo" name="Correo" value="@Model.Correo" required />
        </div>

        <div class="form-group">
            <label for="Pass">Contraseña</label>
            <input type="password" class="form-control" id="Pass" name="Pass" value="@Model.Pass" required />
        </div>
        <div class="form-group">
            <label for="IdEstadoCliente">Estado</label>
            <select class="form-control" id="IdEstadoCliente" name="IdEstadoCliente" required>
                @foreach (var estado in ViewBag.EstadosCliente)
                {
                    <option value="@estado.Id">@estado.Nombre</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Guardar cambios</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
