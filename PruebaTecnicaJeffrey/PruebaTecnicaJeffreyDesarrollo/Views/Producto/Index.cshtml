@model IEnumerable<PruebaTecnicaJeffreyDesarrollo.Models.Producto>

@{
    ViewData["Title"] = "Lista de Productos";
}

<div class="container mt-4">
    <h1 class="mb-4">Lista de Productos</h1>

    <div class="mb-3">
        <a href="@Url.Action("Index", new { filtro = "todos" })" class="btn btn-primary @(ViewBag.FiltroActual == "todos" ? "active" : "")">Todos</a>
        <a href="@Url.Action("Index", new { filtro = "disponibles" })" class="btn btn-success @(ViewBag.FiltroActual == "disponibles" ? "active" : "")">Disponibles</a>
        <a href="@Url.Action("Index", new { filtro = "agotados" })" class="btn btn-danger @(ViewBag.FiltroActual == "agotados" ? "active" : "")">Agotados</a>
    </div>

    <p>
        <a href="@Url.Action("Create")" class="btn btn-primary">Crear Nuevo Producto</a>
    </p>

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Precio</th>
                <th>Cantidad</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model)
            {
                <tr>
                    <td>@producto.Id</td>
                    <td>@producto.Nombre</td>
                    <td>@producto.Descripcion</td>
                    <td>@producto.Precio</td>
                    <td>@producto.Cantidad</td>
                    <td>
                        @if (producto.IdEstadoProducto == 1)
                        {
                            <span class="text-success font-weight-bold">Disponible</span>
                        }
                        else if (producto.IdEstadoProducto == 2)
                        {
                            <span class="text-danger font-weight-bold">Agotado</span>
                        }
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = producto.Id })" class="btn btn-warning btn-sm">Editar</a>
                        <a href="@Url.Action("Details", new { id = producto.Id })" class="btn btn-info btn-sm">Detalles</a>
                        <a href="@Url.Action("Delete", new { id = producto.Id })" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
