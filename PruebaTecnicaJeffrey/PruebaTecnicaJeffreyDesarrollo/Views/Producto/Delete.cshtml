@model PruebaTecnicaJeffreyDesarrollo.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="container mt-4">
    <h1 class="mb-4 text-danger">Eliminar Producto</h1>

    <h4>¿Estás seguro que deseas eliminar este producto?</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Model.Nombre
        </dd>

        <dt class="col-sm-2">
            Descripción
        </dt>
        <dd class="col-sm-10">
            @Model.Descripcion
        </dd>

        <dt class="col-sm-2">
            Precio
        </dt>
        <dd class="col-sm-10">
            @Model.Precio
        </dd>

        <dt class="col-sm-2">
            Cantidad
        </dt>
        <dd class="col-sm-10">
            @Model.Cantidad
        </dd>

        <dt class="col-sm-2">
            Estado
        </dt>
        <dd class="col-sm-10">
            @if (Model.IdEstadoProducto == 1)
            {
                <span class="text-success">Disponible</span>
            }
            else if (Model.IdEstadoProducto == 2)
            {
                <span class="text-danger">Agotado</span>
            }
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
