@model PruebaTecnicaJeffreyDesarrollo.Models.Producto

@{
    ViewData["Title"] = "Detalles del Producto";
}

<div class="container mt-4">
    <h1 class="mb-4">Detalles del Producto</h1>

    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>

        <dt class="col-sm-2">Precio</dt>
        <dd class="col-sm-10">@Model.Precio</dd>

        <dt class="col-sm-2">Cantidad</dt>
        <dd class="col-sm-10">@Model.Cantidad</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">
            @if (Model.IdEstadoProducto == 1)
            {
                <span class="badge badge-success">Disponible</span>
            }
            else if (Model.IdEstadoProducto == 2)
            {
                <span class="badge badge-danger">Agotado</span>
            }
        </dd>
    </dl>

    <a href="@Url.Action("Index")" class="btn btn-secondary">Volver</a>
</div>
